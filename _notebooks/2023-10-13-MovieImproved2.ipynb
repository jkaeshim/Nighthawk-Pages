    "<!DOCTYPE html>\n",
    "<html lang=\"en\">\n",
    "<head>\n",
    "    <meta charset=\"UTF-8\">\n",
    "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n",
    "</head>\n",
    "<body>\n",
    "    <h1>Movie Search by Actor</h1>\n",
    "    \n",
    "    <input type=\"text\" id=\"actorName\" placeholder=\"Enter Actor's Name\">\n",
    "    <br> <!-- Add a line break for spacing -->\n",
    "    \n",
    "    <label for=\"genre\">Select Genre:</label>\n",
    "    <select id=\"genre\">\n",
    "        <option value=\"\">Any Genre</option>\n",
    "        <option value=\"28\">Action</option>\n",
    "        <option value=\"35\">Comedy</option>\n",
    "        <option value=\"18\">Drama</option>\n",
    "        <option value=\"27\">Horror</option>\n",
    "        <option value=\"99\">Documentary</option>\n",
    "        <!-- Add more genres as needed with their corresponding genre IDs -->\n",
    "    </select>\n",
    "\n",
    "    <label for=\"duration\">Select Duration (minutes):</label>\n",
    "    <select id=\"duration\">\n",
    "        <option value=\"\">Any Duration</option>\n",
    "        <option value=\"90\">90 minutes</option>\n",
    "        <option value=\"105\">105 minutes</option>\n",
    "        <option value=\"120\">120 minutes</option>\n",
    "        <!-- Add more durations as needed -->\n",
    "    </select>\n",
    "    \n",
    "    <button onclick=\"searchMovies()\">Search</button>\n",
    "    <button onclick=\"getRandomMovie()\">Give me a random movie please</button>\n",
    "\n",
    "    <h2>Results:</h2>\n",
    "    <ul id=\"movieList\"></ul>\n",
    "\n",
    "    <script>\n",
    "        function searchMovies() {\n",
    "            // Existing searchMovies function\n",
    "            // ...\n",
    "        }\n",
    "\n",
    "        function getRandomMovie() {\n",
    "            const movieList = document.getElementById(\"movieList\");\n",
    "            movieList.innerHTML = \"\"; // Clear previous results\n",
    "\n",
    "            const actorName = document.getElementById(\"actorName\").value;\n",
    "            const genre = document.getElementById(\"genre\").value;\n",
    "            const duration = document.getElementById(\"duration\").value;\n",
    "\n",
    "            // Fetch a random movie\n",
    "            const apiKey = \"bd74380ad0f3a6bc2db537543036493a\";\n",
    "            let apiUrl = `https://api.themoviedb.org/3/search/person?api_key=${apiKey}&query=${actorName}`;\n",
    "\n",
    "            fetch(apiUrl)\n",
    "                .then(response => response.json())\n",
    "                .then(data => {\n",
    "                    const actorId = data.results[0]?.id;\n",
    "                    if (actorId) {\n",
    "                        apiUrl = `https://api.themoviedb.org/3/person/${actorId}/movie_credits?api_key=${apiKey}`;\n",
    "                        return fetch(apiUrl);\n",
    "                    } else {\n",
    "                        throw new Error(\"Actor not found.\");\n",
    "                    }\n",
    "                })\n",
    "                .then(response => response.json())\n",
    "                .then(data => {\n",
    "                    const filteredMovies = data.cast.filter(movie => {\n",
    "                        return (!genre || movie.genre_ids.includes(parseInt(genre))) && (!duration || \n",
    "                                (movie.runtime >= (parseInt(duration) - 15) && movie.runtime <= (parseInt(duration) + 15)));\n",
    "                    });\n",
    "\n",
    "                    if (filteredMovies.length === 0) {\n",
    "                        throw new Error(\"No matching movies found.\");\n",
    "                    }\n",
    "\n",
    "                    const randomMovie = filteredMovies[Math.floor(Math.random() * filteredMovies.length)];\n",
    "                    const movieTitle = randomMovie.title;\n",
    "                    const movieYear = randomMovie.release_date ? randomMovie.release_date.split(\"-\")[0] : \"N/A\";\n",
    "                    const movieRating = randomMovie.vote_average;\n",
    "\n",
    "                    const listItem = document.createElement(\"li\");\n",
    "                    listItem.textContent = `${movieTitle} (${movieYear}) - Duration: ${randomMovie.runtime} minutes - Rating: ${movieRating}/10`;\n",
    "                    movieList.appendChild(listItem);\n",
    "                })\n",
    "                .catch(error => {\n",
    "                    console.error(\"Error:\", error);\n",
    "                });\n",
    "        }\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
