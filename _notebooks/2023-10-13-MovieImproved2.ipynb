    "<html>\n",
    "<head>\n",
    "    <title>Movie Search</title>\n",
    "</head>\n",
    "<body>\n",
    "    <h1>Movie Search</h1>\n",
    "    <label for=\"actorName\">Actor's Name:</label>\n",
    "    <input type=\"text\" id=\"actorName\" placeholder=\"Enter Actor's Name\">\n",
    "    \n",
    "    <label for=\"genre\">Movie Genre:</label>\n",
    "    <select id=\"genre\">\n",
    "        <option value=\"action\">Action</option>\n",
    "        <option value=\"horror\">Horror</option>\n",
    "        <option value=\"documentary\">Documentary</option>\n",
    "        <option value=\"comedy\">Comedy</option>\n",
    "        <option value=\"thriller\">Thriller</option>\n",
    "    </select>\n",
    "    \n",
    "    <button onclick=\"searchMovies()\">Search</button>\n",
    "    <div id=\"movieResults\"></div>\n",
    "\n",
    "    <script>\n",
    "        async function searchMovies() {\n",
    "            const actorName = document.getElementById(\"actorName\").value;\n",
    "            const selectedGenre = document.getElementById(\"genre\").value;\n",
    "            const apiKey = \"YOUR_TMDB_API_KEY\"; // Replace with your TMDb API key\n",
    "\n",
    "            const movieResults = document.getElementById(\"movieResults\");\n",
    "            movieResults.innerHTML = ''; // Clear previous results\n",
    "\n",
    "            try {\n",
    "                // Fetch the actor's ID using the TMDb API\n",
    "                const actorResponse = await fetch(`https://api.themoviedb.org/3/search/person?api_key=${apiKey}&query=${actorName}`);\n",
    "                const actorData = await actorResponse.json();\n",
    "\n",
    "                if (actorData.results.length === 0) {\n",
    "                    throw new Error(\"Actor not found.\");\n",
    "                }\n",
    "\n",
    "                const actorId = actorData.results[0].id;\n",
    "\n",
    "                // Fetch the actor's movie credits using the TMDb API\n",
    "                const creditsResponse = await fetch(`https://api.themoviedb.org/3/person/${actorId}/movie_credits?api_key=${apiKey}`);\n",
    "                const creditsData = await creditsResponse.json();\n",
    "\n",
    "                // Filter movies based on the selected genre\n",
    "                const filteredMovies = creditsData.cast.filter(movie => movie.genre_ids.includes(selectedGenre));\n",
    "\n",
    "                if (filteredMovies.length === 0) {\n",
    "                    const listItem = document.createElement(\"p\");\n",
    "                    listItem.textContent = \"No movies found with the selected actor and genre.\";\n",
    "                    movieResults.appendChild(listItem);\n",
    "                } else {\n",
    "                    const ul = document.createElement(\"ul\");\n",
    "                    for (const movie of filteredMovies) {\n",
    "                        const li = document.createElement(\"li\");\n",
    "                        li.textContent = movie.title;\n",
    "                        ul.appendChild(li);\n",
    "                    }\n",
    "                    movieResults.appendChild(ul);\n",
    "                }\n",
    "            } catch (error) {\n",
    "                console.error(\"Error:\", error);\n",
    "            }\n",
    "        }\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
