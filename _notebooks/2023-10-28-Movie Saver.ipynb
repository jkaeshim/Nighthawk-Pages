    "<!DOCTYPE html>\n",
    "<html>\n",
    "<head>\n",
    "    <title>Movie Search and Favorites</title>\n",
    "</head>\n",
    "<body>\n",
    "    <h1>Movie Search</h1>\n",
    "    <input type=\"text\" id=\"actorQuery\" placeholder=\"Search by actor\">\n",
    "    <button id=\"searchButton\">Search</button>\n",
    "    \n",
    "    <h2>Search Results</h2>\n",
    "    <ul id=\"searchResults\"></ul>\n",
    "    \n",
    "    <h2>Favorites</h2>\n",
    "    <ul id=\"favoriteMovies\"></ul>\n",
    "    \n",
    "    <script>\n",
    "        // JavaScript code for the frontend\n",
    "        document.getElementById('searchButton').addEventListener('click', searchMovies);\n",
    "        document.getElementById('searchResults').addEventListener('click', addToFavorites);\n",
    "\n",
    "        function searchMovies() {\n",
    "            const actorQuery = document.getElementById('actorQuery').value;\n",
    "            fetch('/api/movies/search', {\n",
    "                method: 'POST',\n",
    "                headers: {\n",
    "                    'Content-Type': 'application/json',\n",
    "                },\n",
    "                body: JSON.stringify({ actorQuery }),\n",
    "            })\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                const searchResults = document.getElementById('searchResults');\n",
    "                searchResults.innerHTML = '';\n",
    "                data.forEach(movie => {\n",
    "                    const listItem = document.createElement('li');\n",
    "                    listItem.innerHTML = `\n",
    "                        <strong>Title:</strong> ${movie.title}<br>\n",
    "                        <strong>Overview:</strong> ${movie.overview}<br>\n",
    "                        <button class=\"favorite-button\">Favorite</button>\n",
    "                    `;\n",
    "                    searchResults.appendChild(listItem);\n",
    "                });\n",
    "            });\n",
    "        }\n",
    "\n",
    "        function addToFavorites(event) {\n",
    "            if (event.target.classList.contains('favorite-button')) {\n",
    "                const listItem = event.target.parentElement;\n",
    "                const title = listItem.querySelector('strong').textContent.split(':')[1].trim();\n",
    "                fetch('/api/movies/favorite', {\n",
    "                    method: 'POST',\n",
    "                    headers: {\n",
    "                        'Content-Type': 'application/json',\n",
    "                    },\n",
    "                    body: JSON.stringify({ title }),\n",
    "                })\n",
    "                .then(response => response.json())\n",
    "                .then(data => {\n",
    "                    // Handle the response if needed\n",
    "                    console.log(data.message);\n",
    "                });\n",
    "            }\n",
    "        }\n",
    "\n",
    "        function loadFavorites() {\n",
    "            fetch('/api/movies/favorites')\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                const favoriteMovies = document.getElementById('favoriteMovies');\n",
    "                favoriteMovies.innerHTML = '';\n",
    "                data.forEach(movie => {\n",
    "                    const listItem = document.createElement('li');\n",
    "                    listItem.innerHTML = `\n",
    "                        <strong>Title:</strong> ${movie.title}<br>\n",
    "                        <strong>Overview:</strong> ${movie.overview}<br>\n",
    "                    `;\n",
    "                    favoriteMovies.appendChild(listItem);\n",
    "                });\n",
    "            });\n",
    "        }\n",
    "\n",
    "        // Load favorite movies when the page loads\n",
    "        loadFavorites();\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
