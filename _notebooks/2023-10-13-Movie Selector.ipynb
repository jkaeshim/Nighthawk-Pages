    "<!DOCTYPE html>\n",
    "<html lang=\"en\">\n",
    "<head>\n",
    "    <meta charset=\"UTF-8\">\n",
    "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n",
    "    <title>Movie Search</title>\n",
    "    <style>\n",
    "        /* Add your CSS styles to make the website look nice */\n",
    "        body {\n",
    "            font-family: Arial, sans-serif;\n",
    "        }\n",
    "        /* Add more styles as needed */\n",
    "    </style>\n",
    "</head>\n",
    "<body>\n",
    "    <h1>Movie Search</h1>\n",
    "\n",
    "    <form id=\"movie-search-form\">\n",
    "        <label for=\"actor\">Actor's Name:</label>\n",
    "        <input type=\"text\" id=\"actor\" required><br><br>\n",
    "\n",
    "        <label for=\"genre\">Genre:</label>\n",
    "        <select id=\"genre\">\n",
    "            <option value=\"Action\">Action</option>\n",
    "            <option value=\"Comedy\">Comedy</option>\n",
    "            <option value=\"Drama\">Drama</option>\n",
    "            <!-- Add more genre options as needed -->\n",
    "        </select><br><br>\n",
    "\n",
    "        <label for=\"timeframe\">Timeframe:</label>\n",
    "        <input type=\"number\" id=\"timeframe\" placeholder=\"Year\" min=\"1900\" max=\"2023\"><br><br>\n",
    "\n",
    "        <button type=\"submit\">Search</button>\n",
    "    </form>\n",
    "\n",
    "    <div id=\"movie-list\">\n",
    "        <!-- Movie search results will be displayed here -->\n",
    "    </div>\n",
    "\n",
    "    <script>\n",
    "        const apiKey = 'bd74380ad0f3a6bc2db537543036493a';\n",
    "        const baseURL = 'https://api.themoviedb.org/3/search/movie';\n",
    "        const imageBaseURL = 'https://image.tmdb.org/t/p/w200';\n",
    "\n",
    "        const form = document.getElementById('movie-search-form');\n",
    "        const actorInput = document.getElementById('actor');\n",
    "        const genreSelect = document.getElementById('genre');\n",
    "        const timeframeInput = document.getElementById('timeframe');\n",
    "        const movieList = document.getElementById('movie-list');\n",
    "\n",
    "        form.addEventListener('submit', function (event) {\n",
    "            event.preventDefault();\n",
    "\n",
    "            const actor = actorInput.value;\n",
    "            const genre = genreSelect.value;\n",
    "            const timeframe = timeframeInput.value;\n",
    "\n",
    "            // Make a request to TMDb API\n",
    "            fetch(`${baseURL}?api_key=${apiKey}&query=${actor}`)\n",
    "                .then(response => response.json())\n",
    "                .then(data => {\n",
    "                    // Filter movies by genre and timeframe\n",
    "                    const filteredMovies = data.results.filter(movie => {\n",
    "                        const releaseYear = movie.release_date.split('-')[0];\n",
    "                        return movie.genre_ids.includes(genre) && releaseYear >= timeframe;\n",
    "                    });\n",
    "\n",
    "                    // Display the filtered movies\n",
    "                    displayMovies(filteredMovies);\n",
    "                })\n",
    "                .catch(error => {\n",
    "                    console.error(error);\n",
    "                });\n",
    "        });\n",
    "\n",
    "        function displayMovies(movies) {\n",
    "            movieList.innerHTML = '';\n",
    "            movies.forEach(movie => {\n",
    "                const movieItem = document.createElement('div');\n",
    "                movieItem.innerHTML = `\n",
    "                    <img src=\"${imageBaseURL + movie.poster_path}\" alt=\"${movie.title}\">\n",
    "                    <h2>${movie.title}</h2>\n",
    "                    <p>Release Year: ${movie.release_date.split('-')[0]}</p>\n",
    "                `;\n",
    "                movieList.appendChild(movieItem);\n",
    "            });\n",
    "        }\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
