    "<html>\n",
    "<head>\n",
    "    <title>Spotify Artist Search by Genre</title>\n",
    "    <style>\n",
    "        #container {\n",
    "            text-align: center;\n",
    "        }\n",
    "        .artist-grid {\n",
    "            display: grid;\n",
    "            grid-template-columns: repeat(4, 1fr);\n",
    "            grid-gap: 20px;\n",
    "            justify-content: center;\n",
    "        }\n",
    "        .artist-card {\n",
    "            text-align: center;\n",
    "        }\n",
    "    </style>\n",
    "</head>\n",
    "<body>\n",
    "    <div id=\"container\">\n",
    "        <h1>Spotify Artist Search by Genre</h1>\n",
    "\n",
    "        <label for=\"genre\">Select a Genre:</label>\n",
    "        <select id=\"genre\">\n",
    "            <option value=\"rock\">Rock</option>\n",
    "            <option value=\"pop\">Pop</option>\n",
    "            <option value=\"hip-hop\">Hip Hop</option>\n",
    "            <option value=\"jazz\">Jazz</option>\n",
    "            <option value=\"country\">Country</option>\n",
    "            <option value=\"electronic\">Electronic</option>\n",
    "            <option value=\"reggae\">Reggae</option>\n",
    "        </select>\n",
    "\n",
    "        <div id=\"results\" class=\"artist-grid\">\n",
    "            <!-- Artists and their songs will be displayed here -->\n",
    "        </div>\n",
    "    </div>\n",
    "\n",
    "    <script>\n",
    "        const genreDropdown = document.getElementById('genre');\n",
    "        const resultsContainer = document.getElementById('results');\n",
    "\n",
    "        // Function to fetch artists and their songs based on the selected genre\n",
    "        async function fetchArtistsByGenre(genre) {\n",
    "            try {\n",
    "                const response = await fetch(`https://v1.nocodeapi.com/jakeshim/spotify/gYJPBKzbVypPVhjU/search?q=${genre}&type=artist&perPage=16&page=1`);\n",
    "                const data = await response.json();\n",
    "\n",
    "                const artists = data.artists.items;\n",
    "\n",
    "                // Clear previous results\n",
    "                resultsContainer.innerHTML = '';\n",
    "\n",
    "                // Display the artists and their songs in a 4x4 grid\n",
    "                artists.forEach(artist => {\n",
    "                    const artistName = artist.name;\n",
    "                    const artistLink = artist.external_urls.spotify;\n",
    "                    const artistImage = artist.images[0].url;\n",
    "                    const artistId = artist.id;\n",
    "\n",
    "                    const artistCard = document.createElement('div');\n",
    "                    artistCard.className = 'artist-card';\n",
    "                    artistCard.innerHTML = `\n",
    "                        <div>\n",
    "                            <img src=\"${artistImage}\" alt=\"${artistName}\" width=\"100\" height=\"100\">\n",
    "                            <p><a href=\"${artistLink}\" target=\"_blank\">${artistName}</a></p>\n",
    "                        </div>\n",
    "                    `;\n",
    "\n",
    "                    resultsContainer.appendChild(artistCard);\n",
    "\n",
    "                    // Fetch top tracks for the artist\n",
    "                    fetchTopTracks(artistId);\n",
    "                });\n",
    "            } catch (error) {\n",
    "                console.error('Error fetching data:', error);\n",
    "            }\n",
    "        }\n",
    "\n",
    "        // Function to fetch top tracks for an artist\n",
    "        async function fetchTopTracks(artistId) {\n",
    "            try {\n",
    "                const response = await fetch(`https://api.spotify.com/v1/artists/${artistId}/top-tracks?country=US`);\n",
    "                const data = await response.json();\n",
    "                const topTracks = data.tracks;\n",
    "\n",
    "                // Display the top tracks (limit to 4 tracks)\n",
    "                topTracks.slice(0, 4).forEach(track => {\n",
    "                    const trackName = track.name;\n",
    "                    const trackLink = track.external_urls.spotify;\n",
    "\n",
    "                    const trackCard = document.createElement('div');\n",
    "                    trackCard.className = 'artist-card';\n",
    "                    trackCard.innerHTML = `\n",
    "                        <p><a href=\"${trackLink}\" target=\"_blank\">${trackName}</a></p>\n",
    "                    `;\n",
    "\n",
    "                    resultsContainer.appendChild(trackCard);\n",
    "                });\n",
    "            } catch (error) {\n",
    "                console.error('Error fetching top tracks:', error);\n",
    "            }\n",
    "        }\n",
    "\n",
    "        // Event listener for genre selection\n",
    "        genreDropdown.addEventListener('change', () => {\n",
    "            const selectedGenre = genreDropdown.value;\n",
    "            fetchArtistsByGenre(selectedGenre);\n",
    "        });\n",
    "\n",
    "        // Initial fetch\n",
    "        fetchArtistsByGenre(genreDropdown.value);\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
