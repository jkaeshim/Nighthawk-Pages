    "<!DOCTYPE html>\n",
    "<html>\n",
    "<head>\n",
    "    <title>Movie Filter</title>\n",
    "</head>\n",
    "<body>\n",
    "    <h1>Movie Filter</h1>\n",
    "    <form id=\"filterForm\">\n",
    "        <label for=\"leadActor\">Lead Actor:</label>\n",
    "        <input type=\"text\" id=\"leadActor\" name=\"leadActor\"><br><br>\n",
    "\n",
    "        <label for=\"genre\">Select Genre:</label>\n",
    "        <select id=\"genre\" name=\"genre\">\n",
    "            <option value=\"\">Any Genre</option>\n",
    "            <option value=\"28\">Action</option>\n",
    "            <option value=\"35\">Comedy</option>\n",
    "            <option value=\"27\">Horror</option>\n",
    "            <!-- Add more genre options as needed -->\n",
    "        </select><br><br>\n",
    "\n",
    "        <button type=\"button\" onclick=\"filterMovies()\">Filter Movies</button>\n",
    "    </form>\n",
    "\n",
    "    <button type=\"button\" onclick=\"getRandomMovie()\">Random Movie</button>\n",
    "\n",
    "    <h2>Filtered Movies:</h2>\n",
    "    <ul id=\"filteredMovies\"></ul>\n",
    "\n",
    "    <h2>Favorite Movies:</h2>\n",
    "    <ul id=\"favoriteMovies\"></ul>\n",
    "\n",
    "    <script>\n",
    "        const apiKey = 'bd74380ad0f3a6bc2db537543036493a'; // Replace with your actual API key\n",
    "\n",
    "        function filterMovies() {\n",
    "            const leadActor = document.getElementById('leadActor').value;\n",
    "            const selectedGenre = document.getElementById('genre').value;\n",
    "\n",
    "            // Make an AJAX request to the backend to fetch filtered movies\n",
    "            fetch('/api/movies/filter', {\n",
    "                method: 'POST',\n",
    "                headers: {\n",
    "                    'Content-Type': 'application/json',\n",
    "                },\n",
    "                body: JSON.stringify({ leadActor, genre: selectedGenre }),\n",
    "            })\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                const filteredMoviesList = document.getElementById('filteredMovies');\n",
    "                filteredMoviesList.innerHTML = '';\n",
    "\n",
    "                data.forEach(movie => {\n",
    "                    const movieTitle = movie.title;\n",
    "                    const releaseDate = movie.release_date ? new Date(movie.release_date).getFullYear() : 'N/A';\n",
    "                    const rating = movie.vote_average || 'N/A';\n",
    "\n",
    "                    // Create a list item to display movie details\n",
    "                    const listItem = document.createElement('li');\n",
    "                    listItem.innerHTML = `${movieTitle} (Release Date: ${releaseDate}, Rating: ${rating}/10)\n",
    "                        <button onclick=\"likeMovie(this, '${movieTitle}')\">Like</button>\n",
    "                        <button onclick=\"dislikeMovie(this)\">Dislike</button>`;\n",
    "                    filteredMoviesList.appendChild(listItem);\n",
    "                });\n",
    "\n",
    "                if (filteredMoviesList.children.length === 0) {\n",
    "                    const listItem = document.createElement('li');\n",
    "                    listItem.textContent = 'No matching movies found for the selected actor and genre.';\n",
    "                    filteredMoviesList.appendChild(listItem);\n",
    "                }\n",
    "            });\n",
    "        }\n",
    "\n",
    "        function likeMovie(button, movieTitle) {\n",
    "            button.textContent = 'Liked';\n",
    "            button.disabled = true;\n",
    "            addToFavorites(movieTitle);\n",
    "        }\n",
    "\n",
    "        function dislikeMovie(button) {\n",
    "            button.textContent = 'Disliked';\n",
    "            button.disabled = true;\n",
    "            // You can add code here to save the user's dislike in your backend or local storage.\n",
    "        }\n",
    "\n",
    "        function addToFavorites(movieTitle) {\n",
    "            // Make an AJAX request to the backend to add the movie to favorites\n",
    "            fetch('/api/movies/favorite', {\n",
    "                method: 'POST',\n",
    "                headers: {\n",
    "                    'Content-Type': 'application/json',\n",
    "                },\n",
    "                body: JSON.stringify({ title: movieTitle }),\n",
    "            })\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                console.log(data.message);\n",
    "                // Refresh the list of favorite movies after adding a new one\n",
    "                fetchFavoriteMovies();\n",
    "            });\n",
    "        }\n",
    "\n",
    "        function fetchFavoriteMovies() {\n",
    "            // Make an AJAX request to the backend to fetch favorite movies\n",
    "            fetch('/api/movies/favorites')\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                const favoriteMoviesList = document.getElementById('favoriteMovies');\n",
    "                favoriteMoviesList.innerHTML = '';\n",
    "\n",
    "                data.forEach(movie => {\n",
    "                    const movieTitle = movie.title;\n",
    "                    // Create a list item to display favorite movie details\n",
    "                    const listItem = document.createElement('li');\n",
    "                    listItem.textContent = movieTitle;\n",
    "                    favoriteMoviesList.appendChild(listItem);\n",
    "                });\n",
    "            });\n",
    "        }\n",
    "\n",
    "        function getRandomMovie() {\n",
    "            // Make an AJAX request to the backend to get a random movie\n",
    "            fetch('/api/movies/random')\n",
    "            .then(response => response.json())\n",
    "            .then(data => {\n",
    "                alert(`Random Movie: ${data.title}`);\n",
    "            });\n",
    "        }\n",
    "\n",
    "        // Fetch favorite movies when the page loads\n",
    "        fetchFavoriteMovies();\n",
    "    </script>\n",
    "</body>\n",
    "</html>"
   ]
