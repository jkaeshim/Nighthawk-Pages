    "            <option value=\"27\">Horror</option>\n",
    "            <!-- Add more genre options as needed -->\n",
    "        </select><br><br>\n",
    "\n",
    "        <button type=\"button\" onclick=\"filterMovies()\">Filter Movies</button>\n",
    "    </form>\n",
    "\n",
