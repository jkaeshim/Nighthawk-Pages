   "source": [
    "<html>\n",
    "<head>\n",
    "    <title>Popular TV Shows by Genre</title>\n",
    "    <style>\n",
    "        #container {\n",
    "            text-align: center;\n",
    "        }\n",
    "        .grid-container {\n",
    "            display: grid;\n",
    "            grid-template-columns: repeat(4, 1fr);\n",
    "            gap: 20px;\n",
    "            justify-content: center;\n",
    "        }\n",
    "        .grid-item {\n",
    "            text-align: center;\n",
    "        }\n",
    "    </style>\n",
    "</head>\n",
    "<body>\n",
    "    <div id=\"container\">\n",
    "        <h1>Popular TV Shows by Genre</h1>\n",
    "\n",
    "        <label for=\"genre\">Select a Genre:</label>\n",
    "        <select id=\"genre\">\n",
    "            <option value=\"action\">Action</option>\n",
    "            <option value=\"comedy\">Comedy</option>\n",
    "            <option value=\"drama\">Drama</option>\n",
    "            <option value=\"horror\">Horror</option>\n",
    "            <option value=\"romance\">Romance</option>\n",
    "            <option value=\"science-fiction\">Science Fiction</option>\n",
    "            <option value=\"thriller\">Thriller</option>\n",
    "        </select>\n",
    "\n",
    "        <div id=\"results\" class=\"grid-container\">\n",
    "            <!-- TV shows will be displayed here -->\n",
    "        </div>\n",
    "    </div>\n",
    "\n",
    "    <script>\n",
    "        const genreDropdown = document.getElementById('genre');\n",
    "        const resultsContainer = document.getElementById('results');\n",
    "\n",
    "        // Function to fetch TV shows based on the selected genre\n",
    "        async function fetchShowsByGenre(genre) {\n",
    "            try {\n",
    "                const response = await fetch(`https://www.episodate.com/api/most-popular?page=1&genre=${genre}`);\n",
    "                const data = await response.json();\n",
    "\n",
    "                const shows = data.tv_shows;\n",
    "\n",
    "                // Clear previous results\n",
    "                resultsContainer.innerHTML = '';\n",
    "\n",
    "                // Display the TV shows in a 4x4 grid\n",
    "                shows.slice(0, 16).forEach(show => {\n",
    "                    const showName = show.name;\n",
    "                    const showLink = show.url;\n",
    "                    const showImage = show.image_path;\n",
    "\n",
    "                    const showCard = document.createElement('div');\n",
    "                    showCard.className = 'grid-item';\n",
    "                    showCard.innerHTML = `\n",
    "                        <div>\n",
    "                            <img src=\"${showImage}\" alt=\"${showName}\" width=\"100\" height=\"100\">\n",
    "                            <p><a href=\"${showLink}\" target=\"_blank\">${showName}</a></p>\n",
    "                        </div>\n",
    "                    `;\n",
    "\n",
    "                    resultsContainer.appendChild(showCard);\n",
    "                });\n",
    "            } catch (error) {\n",
    "                console.error('Error fetching data:', error);\n",
    "            }\n",
    "        }\n",
    "\n",
    "        // Event listener for genre selection\n",
    "        genreDropdown.addEventListener('change', () => {\n",
    "            const selectedGenre = genreDropdown.value;\n",
    "            fetchShowsByGenre(selectedGenre);\n",
    "        });\n",
    "\n",
    "        // Initial fetch for the selected genre\n",
    "        fetchShowsByGenre(genreDropdown.value);\n",
    "    </script>\n",
    "</body>\n",
    "</html>\n"
   ]
  }
